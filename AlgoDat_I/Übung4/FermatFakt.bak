#lang racket
(define (fakt n)
  (let* ((a (get-corrected-a (ceiling (sqrt n)) n)) ;Aufruf der iterativen Prozedur get-corrected-a um das a zu finden, bei dem bÂ² eine ganze Zahl ist
         (bsqr (get-b a n)))
    (if (even? n) 2 (- a (sqrt bsqr)))))

(define (get-corrected-a a n)
  (let ((b (get-b a n)))
    (if (integer? (sqrt b))
        a
        (get-corrected-a (+ a 1) n))))

(define (get-b a n)
  (- (expt a 2) n))